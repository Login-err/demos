<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <meta name="keywords" content="关键词">
    <meta name="description" content="描述">
    <meta name="author" content="">
    <style>
        body {
            font-family: "Microsoft YaHei", serif;
            user-select: none;
        }

        body, dl, dd, p, h1, h2, h3, h4, h5, h6 {
            margin: 0;
        }

        ol, ul, li {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        img {
            border: none;
            display: block;
        }

        a {
            color: #000;
        }
    </style>
    <link type="text/css" href="/css/index.css" rel="stylesheet">
</head>
<body>
    <div class="edit">
        <form action="/location/edit" method="post">
            地点序号：<select name="locationNo" id="locationNo"></select><br/>
            地点名称：<input type="text" name="locationName"><br/>
            最大人数上限：<input type="text" name="maxSize"><br/>
            <input type="submit" id="submit" value="提交">
            <a href="/location/index">点我返回首页</a>
        </form>
    </div>
    <script src="/js/ajax.js"></script>
    <script>
        const locationNo = document.getElementById('locationNo');
        ajax({
            url: 'http://localhost:3000/location/getLocationID',
            type: 'POST'
        }).then(function(data) {
            const locationArr = JSON.parse(data);
            const frag = document.createDocumentFragment();
            for (let i = 0,len=locationArr.length; i < len; i++) {
                const item = locationArr[i];
                const option = document.createElement('option');
                option.value = item.locationNo;
                option.innerHTML = item.locationNo;
                frag.appendChild(option);
            }
            locationNo.appendChild(frag);
        })
    </script>
</body>
</html>


